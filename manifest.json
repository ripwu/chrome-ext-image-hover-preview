{
  "manifest_version": 3,
  "name": "Image Hover Preview",
  "version": "1.0.0",
  "description": "显示图片悬停预览效果，支持任意网页",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  
  
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}